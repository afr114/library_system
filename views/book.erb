<h1>Here are the details for this book:</h1>

<h3>
  Title: <%= @book.title %>
  <br>
  Author: <%= @book.author %>
</h3>

<form action="/book/<%= @book.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="book">Update book info</label>
  <br>
  <input id="title" name="title" type="text" placeholder="Update title here">
  <br>
  <input id="author" name="author" type="text" placeholder="Update author here">
  <button type="submit">Update</button>
</form>
<br>

<form action='/book/<%= @book.id() %>' method='post'>
  <input name='_method' type='hidden' value='delete'>

  <button class='btn-danger' type='submit'>Delete</button>
</form>
<a href="/books">Back to Employee Page</a>
